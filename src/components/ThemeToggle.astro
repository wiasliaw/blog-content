---
// Theme Toggle Component
// Switches between light and dark themes
---

<button
  class="theme-toggle neu-button flex items-center justify-center w-10 h-10 p-0 text-foreground"
  aria-label="Toggle theme"
  title="Toggle theme"
>
  <svg class="icon sun hidden" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <circle cx="12" cy="12" r="5"></circle>
    <line x1="12" y1="1" x2="12" y2="3"></line>
    <line x1="12" y1="21" x2="12" y2="23"></line>
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
    <line x1="1" y1="12" x2="3" y2="12"></line>
    <line x1="21" y1="12" x2="23" y2="12"></line>
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
  </svg>
  <svg class="icon moon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
  </svg>
</button>

<style>
  /* Light theme: show moon, hide sun */
  :global(html:not([data-theme="dark"])) .sun {
    display: none;
  }
  
  :global(html:not([data-theme="dark"])) .moon {
    display: block;
  }

  /* Dark theme: show sun, hide moon */
  :global(html[data-theme="dark"]) .sun {
    display: block;
  }
  
  :global(html[data-theme="dark"]) .moon {
    display: none;
  }
</style>

<script>
  function initThemeToggle() {
    const buttons = document.querySelectorAll('.theme-toggle');
    if (!buttons.length) return;

    buttons.forEach(button => {
      if (button.dataset.initialized) return;
      button.dataset.initialized = 'true';

      button.addEventListener('click', () => {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

        document.documentElement.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
      });
    });
  }

  // Run on initial load
  initThemeToggle();

  // Re-run after Astro page transitions
  document.addEventListener('astro:after-swap', () => {
    document.querySelectorAll('.theme-toggle').forEach(btn => {
      btn.dataset.initialized = '';
    });
    initThemeToggle();
  });
</script>
