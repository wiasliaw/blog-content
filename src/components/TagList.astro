---
interface Props {
  tags: string[];
  showLinks?: boolean;
}

const { tags, showLinks = true } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  {tags.map((tag) => (
    showLinks ? (
      <a 
        href={`/tags/${tag}`} 
        class="inline-block px-2 py-1 bg-secondary border border-border rounded text-sm text-muted no-underline transition-all hover:bg-primary hover:border-primary hover:text-white"
      >
        #{tag}
      </a>
    ) : (
      <span class="inline-block px-2 py-1 bg-secondary border border-border rounded text-sm text-muted">
        #{tag}
      </span>
    )
  ))}
</div>
