---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

// Generate JSON-LD structured data for BreadcrumbList
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": items.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.label,
    ...(item.href && { "item": new URL(item.href, Astro.site).href }),
  })),
};
---

<nav aria-label="Breadcrumb" class="mb-6">
  <ol class="flex flex-wrap items-center gap-2 text-sm list-none pl-0 mb-0">
    {items.map((item, index) => (
      <li class="flex items-center gap-2">
        {index > 0 && (
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="14"
            height="14"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-muted"
          >
            <path d="m9 18 6-6-6-6"/>
          </svg>
        )}
        {item.href ? (
          <a
            href={item.href}
            class="text-muted hover:text-primary transition-colors no-underline"
          >
            {item.label}
          </a>
        ) : (
          <span class="text-foreground font-medium">{item.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>

<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
